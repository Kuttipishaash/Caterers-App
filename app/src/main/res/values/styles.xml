<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WithActionBar" parent="Theme.Design.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="EditText.White" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/grey_600</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="colorControlNormal">@color/grey_10</item>
    </style>

    <style name="EditText.White.Hint" parent="@style/EditText.White">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/grey_700</item>
    </style>

    <style name="ProgressBar.White" parent="@style/AppTheme">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Rounded_Button_Accent" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Rounded_Button_White" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_button_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Button.Accent.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Grey.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SignUpTextInput">
        <item name="android:drawableTint" tools:ignore="NewApi">@color/colorAccent</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="ItemSpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="OrderHistoryLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="OrderHistoryItem">
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="OrderDetailTableHeader">
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ActivityHeaderTextViewWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="buttonBarNegativeButtonStyle">@style/Button.Grey.Borderless</item>
        <item name="buttonBarPositiveButtonStyle">@style/Button.Accent.Borderless</item>
    </style>

    <style name="NegativeButtonStyle" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:textColor">#f00</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:textColor">#00f</item>
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
