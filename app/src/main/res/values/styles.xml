<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText.White" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/grey_600</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="colorControlNormal">@color/grey_10</item>
    </style>

    <style name="EditText.White.Hint" parent="@style/EditText.White">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/grey_700</item>
    </style>

    <style name="ProgressBar.White" parent="@style/AppTheme">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Rounded_Button_Accent" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Rounded_Button_White" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_button_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SignUpTextInput" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:drawableTint">@color/colorAccent</item>
        <item name="android:drawablePadding">8dp</item>
    </style>


</resources>
