<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CatererProfileActivity">

    <LinearLayout
        android:id="@+id/act_user_prof_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/act_user_prof_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/user_placeholder" />

        <TextView
            android:id="@+id/act_user_prof_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <TextView
            android:id="@+id/act_user_prof_address_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Addr 1" />

        <TextView
            android:id="@+id/act_user_prof_address_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Addr 2" />

        <Button
            android:id="@+id/act_user_prof_call_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call" />

        <Button
            android:id="@+id/act_user_prof_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email" />
    </LinearLayout>
</LinearLayout>