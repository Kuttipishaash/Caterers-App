<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/li_ord_det_item_image"
            android:layout_width="1000dp"
            android:layout_height="80dp"
            android:src="@drawable/placeholder"
            android:visibility="gone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@color/grey_5"
            android:gravity="center"
            android:text="xa-fgag" />

        <TextView
            android:id="@+id/li_ord_det_item_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/lorem_title" />

        <TextView
            android:id="@+id/li_ord_det_item_qty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/grey_5"
            android:gravity="end|center_vertical"
            android:paddingEnd="5dp"
            android:text="@string/lorem_title" />

        <TextView
            android:id="@+id/li_ord_det_item_rate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="end|center_vertical"
            android:paddingEnd="5dp"
            android:text="@string/lorem_title" />

        <TextView
            android:id="@+id/li_ord_det_item_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey_5"
            android:gravity="end|center_vertical"
            android:paddingEnd="10dp"
            android:text="@string/lorem_title"
            android:textColor="@color/grey_900"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>